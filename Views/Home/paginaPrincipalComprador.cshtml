@{
    ViewBag.Title = "Ofertas - Re-Estrena";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/ofertas.css">
</head>
<body>
    <header class="header-ofertas">
        <div class="logo-section">
            <img src="~/images/logo.png" alt="Logo Re-Estrena" class="logo">
 
        </div>
        <nav>
            <ul>
                <li><a href="@Url.Action('VerPaginaPrincipalC', 'Account')">RE-ESTRENA</a></li>
                <li><a href="#">Nuestros Productos</a></li>
                <li><a href="#">Favoritos</a></li>
            </ul>
        </nav>
        <!-- Updated search form to use buscarProducto controller action -->
        <form class="search-bar" method="get" action="@Url.Action('buscarProducto', 'Account')">
            <input type="text" name="descripcion" placeholder="Buscar productos..." />
            <button type="submit">üîç</button>
        </form>
        <div class="header-icons">
            @if (ViewBag.Usuario != null)
            {
                <a href='@Url.Action("VerUsuarioC", "AccountController")' title="@ViewBag.Usuario.Nombre">
                    <span class="user-initial">@ViewBag.Usuario.Nombre</span>
                </a>
            }
            <a href='@Url.Action("VerCarrito", "PurchaseController")' class="icon-link">üõí</a>
            <a href="#" class="icon-link">‚öôÔ∏è</a>
            <a href='@Url.Action("VerNotificaciones", "Account")' class="icon-link">üîî</a>
            <a href='@Url.Action("VerMensajes", "Account")' class="icon-link">üí¨</a>
        </div>
    </header>

    <main class="ofertas-container">
        <div>
            <h2>Ofertas</h2>
        </div>

        <div class="productos-grid">
            @if (ViewBag.Publicaciones != null && ViewBag.Publicaciones.Count > 0)
            {
                foreach (var Publicacion in ViewBag.Publicaciones)
                {
                    <article class="producto-card">
                        <div>
                            <h3 class="producto-titulo">@Publicacion.Titulo</h3>
                            <!-- Added form to submit likear action -->
                            <form method="post" action='@Url.Action("likear", "AccountController")'>
                                <input type="hidden" name="idPublicacion" value="@Publicacion.Id" />
                                <button type="submit">‚ù§Ô∏è</button>
                            </form>
                        </div>
                        
                       
                        <a href='@Url.Action("VerPublicacion", "AccountController", new { idPublicacion = Publicacion.Id })'>
                            <div class="producto-imagen">
                                @if (!string.IsNullOrEmpty(Publicacion.ImagenUrl))
                                {
                                    <img src="@Publicacion.ImagenUrl" alt="@Publicacion.Titulo" />
                                }
                                else
                                {
                                    <img src="/placeholder.svg?height=200&width=200" alt="@Publicacion.Titulo" />
                                }
                            </div>
                        </a>

                        <div class="producto-info">
                            <p>@Publicacion.Descripcion</p>
                            
                            <div class="producto-detalles">
                                <p>Categor√≠a: @Publicacion.Categoria</p>
                                <p>Estado: @Publicacion.Estado</p>
                                <p>Talle: @Publicacion.Talle</p>
                                <p>G√©nero: @Publicacion.Genero</p>
                            </div>

                            <div>
                                <form method="post" action='@Url.Action("AgregarACarrito", "PurchaseController")'>
                                    <input type="hidden" name="idPublicacion" value="@Publicacion.Id" />
                                    <button type="submit" class="precio-btn">${@Publicacion.Precio}</button>
                                </form>
                            </div>
                        </div>
                    </article> 
                }
            }
            else
            {
                <p>No hay ofertas disponibles en este momento.</p>
            }
        </div>
    </main>

    <footer>
        <p> &copy; 2025 Re-Estrena - Todos los derechos reservados a Re-Estrena</p>
    </footer>
</body>
</html>