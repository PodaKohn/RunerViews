@{
    bool esVendedor = ViewBag.esVendedor;
    
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Notificaciones</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <header>
        <div class="logo-section">
            <img src="~/images/logo.png" alt="Logo Re-Estrena">
          
        </div>
        <div class="header-bar">
            <img src="logo.png" alt="Logo Re-Estrena" class="logo">
            <a href="@Url.Action('VerPaginaPrincipalC', 'AccountController')">RE-ESTRENA</a>
            <nav class="menu-bar">
                @if (esVendedor)
                {
                    <a href="@Url.Action("LandingPage", "Home")">Vender</a>
                    <a href="@Url.Action("SubirPublicacion", "Publicacion")"><img src="plus_icon.png" alt="Subir" title="Subir publicación"></a>
                }
                else
                {
                    <a href="@Url.Action("LandingPage", "Home")">Comprar</a>
                    <a href="@Url.Action("VerCarrito", "Carrito")"><img src="cart_icon.png" alt="Carrito" title="Carrito"></a>
                }
                <a href="@Url.Action("VerUsuario", "Usuario")"><img src="user_icon.png" alt="Usuario" title="Perfil usuario"></a>
                <a href="@Url.Action("VerNotificaciones", "Notificaciones")"><img src="bell_icon.png" alt="Notificaciones" title="Notificaciones"></a>
                <a href="@Url.Action("VerMensajes", "Mensajes")"><img src="msg_icon.png" alt="Mensajes" title="Mensajes"></a>
                <a href="@Url.Action("CerrarSesion", "Account")"><img src="logout_icon.png" alt="Cerrar sesión" title="Cerrar sesión"></a>
            </nav>
        </div>
    </header>

    <div class="container">
        <h2>
            @(esVendedor ? "Tus notificaciones como vendedor" : "Tus notificaciones como comprador")
        </h2>

        @if (notificaciones != null && notificaciones.Count > 0)
        {
            <ul class="notificaciones-list">
                @foreach (var notificacion in notificaciones)
                {
                    <li>@notificacion</li>
                }
            </ul>
        }
        else
        {
            <p>No tienes notificaciones por ahora.</p>
        }
    </div>
</body>
</html>