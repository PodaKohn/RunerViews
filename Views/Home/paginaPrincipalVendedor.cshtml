@{
    ViewData["Title"] = "Re-Estrena - Perfil Vendedor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="estilo.css">
</head>
<body>
    <header>
            <div class="logo-section">
                <img src="~/images/logo.png" alt="Logo Re-Estrena">
      
            </div>
           <div class="header-bar">
      <img src="logo.png" alt="Logo Re-Estrena" class="logo">
  <a href="@Url.Action('VerPaginaPrincipalC', 'Account')">RE-ESTRENA</a>
      <nav class="menu-bar">
        <a href="@Url.Action('LandingPage', 'Home')">Comprar</a>
        <a href="@Url.Action('SubirPublicacion', 'Post')"><img src="plus_icon.png" alt="Subir" title="Subir publicación"></a>
        <a href="@Url.Action('VerUsuario', 'Home')"><img src="user_icon.png" alt="Usuario" title="Perfil usuario"></a>
        <a href="@Url.Action('VerNotificaciones', 'Home')"><img src="bell_icon.png" alt="Notificaciones" title="Notificaciones"></a>
        <a href="@Url.Action('VerMensajes', 'Home')"><img src="msg_icon.png" alt="Mensajes" title="Mensajes"></a>
        <a href="@Url.Action('CerrarSesion', 'Account')"><img src="logout_icon.png" alt="Cerrar sesión" title="Cerrar sesión"></a>
      </nav>
    </div>
    </header>

    <main>
        <section class="perfil">
            <div class="perfil-container">
                <div class="foto-perfil">
                    <img src="@(ViewBag.Usuario.FotoPerfil ?? "  ~/images/default-avatar.png")" alt="Foto de perfil">
                    <form asp-action="SubirFoto" asp-controller="AccountControllerController" method="post" enctype="multipart/form-data">
                        <label for="foto-upload" class="subir-foto-btn">Subir foto</label>
                        <input type="file" id="foto-upload" name="foto" accept="image/*" style="display: none;" onchange="this.form.submit()">
                    </form>
                </div>

                <div class="datos-perfil">
                    <div class="header-perfil">
                        <div>
                            <h2>@ViewBag.Usuario.Nombre</h2>
                            <p class="username">@("@" + ViewBag.Usuario.Username)</p>
                        </div>
                        <button class="btn-editar" onclick="toggleEditarPerfil()">✎</button>
                        <button class="btn-config">⚙</button>
                    </div>

                    <div id="descripcion-vista" class="descripcion">
                        <p>@Html.Raw(ViewBag.Usuario.Descripcion?.Replace("\n", "<br>") ?? "Sin descripción")</p>
                    </div>

                    <div id="descripcion-editar" class="descripcion-editar" style="display: none;">
                        <form asp-action="ActualizarPerfil" asp-controller="AccountControllerController" method="post">
                            <textarea name="descripcion" rows="5" placeholder="Escribe tu descripción...">@ViewBag.Usuario.Descripcion</textarea>
                            <input type="hidden" name="userId" value="@ViewBag.Usuario.Id" />
                            <div class="botones-editar">
                                <button type="submit" class="btn-guardar">Guardar</button>
                                <button type="button" class="btn-cancelar" onclick="toggleEditarPerfil()">Cancelar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <section class="publicaciones">
            <h3>Tus publicaciones</h3>

            <div class="lista-publicaciones">
                @if (ViewBag.PublicacionesPropias != null && ViewBag.PublicacionesPropias.Count > 0)
                {
                    foreach (var pub in ViewBag.PublicacionesPropias)
                    {
                        <article class="producto">
                            <div class="producto-header">
                                <h4>@Publicacion.Titulo</h4>
                                <button class="btn-editar-publicacion" onclick="location.href='@Url.Action("EditarPublicacion", "Account", new { id = pub.Id })'">✎</button>
                            </div>
                            <img src="@pub.ImagenUrl" alt="@pub.Titulo">
                            <p class="descripcion-producto">@pub.Descripcion</p>
                            <div class="detalles-producto">
                                @if (!string.IsNullOrEmpty(pub.Categoria))
                                {
                                    <span class="detalle">Categoría: @pub.Categoria</span>
                                }
                                @if (!string.IsNullOrEmpty(pub.Estado))
                                {
                                    <span class="detalle">Estado: @pub.Estado</span>
                                }
                                @if (!string.IsNullOrEmpty(pub.Talle))
                                {
                                    <span class="detalle">Talle: @pub.Talle</span>
                                }
                                @if (!string.IsNullOrEmpty(pub.Genero))
                                {
                                    <span class="detalle">Género: @pub.Genero</span>
                                }
                            </div>
                            <p class="precio"><strong>$@pub.Precio</strong></p>
                        </article>
                    }
                }
                else
                {
                    <p class="sin-publicaciones">Aún no tienes publicaciones. ¡Crea tu primera publicación!</p>
                }
            </div>

            <div class="agregar-publicacion">
                <a href='@Url.Action("CrearPublicacion", "AccountController")' >+ Crear nueva publicación</a>
            </div>
        </section>

        <div class="cerrar-sesion">
            <form asp-action="CerrarSesion" asp-controller="OnBoarding" method="post">
                <button type="submit">Cerrar sesión</button>
            </form>
        </div>
    </main>

    <footer>
        <p>© Copyright - Todos los derechos reservados a Re-Estrena</p>
    </footer>

    <script>
        function editarPerfil() {
            const vista = document.getElementById('descripcion-vista');
            const editar = document.getElementById('descripcion-editar');
            
            if (vista.style.display === 'none') {
                vista.style.display = 'block';
                editar.style.display = 'none';
            } else {
                vista.style.display = 'none';
                editar.style.display = 'block';
            }
        }
    </script>
</body>
</html> 